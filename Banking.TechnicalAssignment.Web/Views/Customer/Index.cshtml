@model List<Banking.TechnicalAssignment.Web.Core.Domain.CustomerViewModel>
@using Banking.TechnicalAssignment.Web.Core.Domain

@{
    ViewData["Title"] = "Customer";
}

<div class="text-center">
    <div class="row ml-4">
        <a asp-action="AddCustomer" class="btn btn-primary">Add Customer</a>
    </div>
    <div class="row p-3 mt-3">
        <div class="col-md">
            <ul class="list-group">
                @if (Model == null || !Model.Any())
                {
                    <h5>No Customers !!</h5>
                }
                else
                {
                    @foreach (var customer in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <h5>@customer.Name @customer.Surname</h5>
                            <span class="badge badge-light">
                                @Html.ActionLink("Account Summary", null, "Account", new { id = customer.CustomerId })
                            </span>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>