@model Banking.TechnicalAssignment.Web.Core.Domain.AccountSummary
@{
    ViewData["Title"] = "Accounts";
}


@if (Model == null || Model.Account == null)
{
    <div class="row ml-4">
        <a asp-action="AddAccount" asp-route-customerId="@Model.Customer.CustomerId" class="btn btn-primary">Add Account</a>
    </div>

    <div class="row p-3 mt-3">
        <div class="col-md">
            <h4>No Accounts Found for Customer</h4>
        </div>
    </div>
}
else
{
<div class="row">
    <div class="row ml-4">
        <a asp-action="AddAccountTransaction" asp-route-customerId="@Model.Customer.CustomerId" class="btn btn-primary">Add Transaction</a>
    </div>
</div>

    <div class="text-center">
        <div class="row p-3 mt-3">
            <div class="col-md">
                <h4>Account Id : @Model.Account.CustomerId</h4>
                <h4>Balance : @Model.Account.Balance</h4>
            </div>
        </div>
        <div class="row p-3 mt-3">
            <div class="col-md">
                <ul class="list-group">
                    @if (Model.Transactions == null || !Model.Transactions.Any())
                    {
                        <h5>No Transactions !!</h5>
                    }
                    else
                    {
                        @foreach (var transaction in Model.Transactions)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <h5>@transaction.Amount</h5>
                                <h5>@transaction.Date</h5>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
}



